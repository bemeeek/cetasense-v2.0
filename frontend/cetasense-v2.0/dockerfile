# → Save this as frontend/cetasense-v2.0/Dockerfile
FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

FROM nginx:stable-alpine

# 🗑️ remove all default configs so only yours exist
RUN rm -f /etc/nginx/nginx.conf && rm -rf /etc/nginx/conf.d

# 🗑️ remove default html
RUN rm -rf /usr/share/nginx/html/*

# 📦 copy your built React app
COPY --from=builder /app/dist /usr/share/nginx/html

# ⚙️ copy your complete nginx.conf into place (PERBAIKAN DI SINI)
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]