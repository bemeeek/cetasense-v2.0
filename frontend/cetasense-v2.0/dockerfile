# ─── BUILD STAGE ───────────────────────────────────────
FROM node:20-bullseye-slim AS builder
WORKDIR /app

# Copy package.json & lockfile, install semua deps
COPY package*.json ./
RUN npm ci

# Copy source & build
COPY . .
RUN npm run build && npm prune --production

FROM nginx:stable-alpine AS runner
WORKDIR /usr/share/nginx/html

# Copy hasil build & config
COPY --from=builder /app/dist ./
COPY nginx-frontend.conf /etc/nginx/conf.d/default.conf

# 1) Install wget (atau curl) untuk healthcheck
RUN apk add --no-cache wget

# 2) Buat cache dirs & set ownership ke user web
RUN mkdir -p /var/cache/nginx/{client_temp,proxy_temp,fastcgi_temp,uwsgi_temp,scgi_temp} \
 && addgroup -S web \
 && adduser -S web -G web \
 && chown -R web:web /usr/share/nginx/html /var/cache/nginx

# USER web

EXPOSE 80

HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD wget --spider http://localhost/index.html || exit 1

CMD ["nginx", "-g", "daemon off;"]